<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ent_picker_date">
        <attr name="ent_picker_date_item_color" format="color"/>
        <attr name="ent_picker_date_item_selector_color" format="color"/>
        <attr name="ent_picker_date_item_size" format="color"/>
        <attr name="ent_picker_date_selected_item_size" format="color"/>
        <attr name="ent_picker_date_item_height" format="dimension"/>
        <attr name="ent_picker_date_visible_count" format="integer"/>
        <attr name="ent_picker_date_center_drawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ent_picker_time">
        <attr name="ent_picker_time_item_color" format="color"/>
        <attr name="ent_picker_time_item_selected_color" format="color"/>
        <attr name="ent_picker_time_item_size" format="color"/>
        <attr name="ent_picker_time_selected_item_size" format="color"/>
        <attr name="ent_picker_time_item_height" format="dimension"/>
        <attr name="ent_picker_time_visible_count" format="integer"/>
        <attr name="ent_picker_time_center_drawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ent_picker_wheel">
        <attr name="ent_picker_wheel_item_color" format="color"/>
        <attr name="ent_picker_wheelSelectedColor" format="color"/>
        <attr name="ent_picker_wheel_item_size" format="dimension"/>
        <attr name="ent_picker_wheel_selected_item_size" format="dimension"/>
        <attr name="ent_picker_wheel_item_height" format="dimension"/>
        <attr name="ent_picker_wheel_visible_count" format="integer"/>
        <attr name="ent_picker_wheel_center_drawable" format="reference"/>
        <attr name="ent_picker_wheel_content_padding" format="dimension"/>
    </declare-styleable>

    <attr name="ent_picker_wheel_wheelStyle" format="reference"/>

    <attr name="ent_picker_time_timeStyle" format="reference"/>

    <attr name="ent_picker_date_dateStyle" format="reference"/>

    <style name="ent_picker_wheel_wheelDefaultStyle">
        <item name="ent_picker_wheel_item_color">@color/ent_picker_default_color</item>
        <item name="ent_picker_wheelSelectedColor">@color/ent_picker_selected_color</item>
        <item name="ent_picker_wheel_item_size">@dimen/ent_picker_wheel_text_size</item>
        <item name="ent_picker_time_selected_item_size">@dimen/ent_picker_selected_text_size</item>
        <item name="ent_picker_time_item_height">@dimen/ent_picker_wheel_item_height</item>
        <item name="ent_picker_time_visible_count">5</item>
        <item name="ent_picker_time_center_drawable">@drawable/ent_wheel_wheelview_item_center_bg
        </item>
        <item name="ent_picker_wheel_content_padding">@dimen/ent_picker_wheel_text_padding</item>
    </style>

    <style name="ent_picker_date_dateDefaultStyle">
        <item name="ent_picker_date_item_color">@color/ent_picker_default_color</item>
        <item name="ent_picker_date_item_selector_color">@color/ent_picker_selected_color</item>
        <item name="ent_picker_date_item_size">@dimen/ent_picker_wheel_text_size</item>
        <item name="ent_picker_date_selected_item_size">@dimen/ent_picker_selected_text_size</item>
        <item name="ent_picker_date_item_height">@dimen/ent_picker_wheel_item_height</item>
        <item name="ent_picker_date_visible_count">5</item>
        <item name="ent_picker_date_center_drawable">@drawable/ent_wheel_wheelview_item_center_bg
        </item>
    </style>

    <style name="ent_picker_time_timeDefaultStyle">
        <item name="ent_picker_time_item_color">@color/ent_picker_default_color</item>
        <item name="ent_picker_time_item_selected_color">@color/ent_picker_selected_color</item>
        <item name="ent_picker_time_item_size">@dimen/ent_picker_wheel_text_size</item>
        <item name="ent_picker_time_selected_item_size">@dimen/ent_picker_selected_text_size</item>
        <item name="ent_picker_time_item_height">@dimen/ent_picker_wheel_item_height</item>
        <item name="ent_picker_time_visible_count">5</item>
        <item name="ent_picker_time_center_drawable">@drawable/ent_wheel_wheelview_item_center_bg
        </item>
    </style>

    <dimen name="ent_picker_wheel_text_padding">5dp</dimen>
    <dimen name="ent_picker_wheel_text_size">17dp</dimen>
    <dimen name="ent_picker_selected_text_size">20dp</dimen>
    <dimen name="ent_picker_wheel_item_height">40dp</dimen>

    <color name="ent_picker_default_color">#999999</color>
    <color name="ent_picker_selected_color">#333333</color>
</resources>