<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/custom_picker_color14"/>
            <!--左上，左下圆角-->
            <corners
                android:bottomLeftRadius="@dimen/custom_picker_button_radius"
                android:topLeftRadius="@dimen/custom_picker_button_radius"/>
        </shape>
    </item>
    <!-- 此处定义只有左上下三边有边框-->
    <item
        android:bottom="@dimen/custom_picker_line_size"
        android:left="@dimen/custom_picker_line_size"
        android:top="@dimen/custom_picker_line_size">
        <!--边框里面背景颜色-->
        <shape>
            <solid android:color="@color/custom_picker_color14"/>
            <!--左上，左下圆角-->
            <corners
                android:bottomLeftRadius="@dimen/custom_picker_button_radius"
                android:topLeftRadius="@dimen/custom_picker_button_radius"/>
        </shape>
    </item>
</layer-list>